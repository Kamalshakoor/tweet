<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-sm-6 offset-sm-3 border shadow py-3 px-3">
      <h2 class='text-center'>Sign up</h2>
      <hr />

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field mb-3">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, required: true,class:'form-control',placeholder:'Enter name...' %>
          </div>
            <div class="field mb-3">
            <%= f.label :username %><br />
            <%= f.text_field :username, required: true,class:'form-control',placeholder:'Enter username...' %>
          </div>
          <div class="field mb-3">
            <%= f.label :email %><br />
            <%= f.email_field :email, autocomplete: "email", class:'form-control',placeholder:'Enter email...' %>
          </div>

          <div class="field mb-3">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password",class:'form-control',placeholder:'Enter password...' %>
          </div>

          <div class="field mb-3">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password",class:'form-control',placeholder:'Enter password...' %>
          </div>

          <div class="actions mb-3">
            <%= f.submit "Sign up", class:'form-control btn btn-outline-success' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

    </div>
  </div>
</div>







