<div class="row g-2">
    <div class="col-sm-3">
        <div class="card mb-3">
            <div class="row no-gutters">
                <!-- Circular Image (Left) -->
                <% if user_signed_in? %>
                    <div class="col-md-4">
                        <div
                            class="rounded-circle overflow-hidden"
                            style="width: 100px; height: 100px;">
                            <%= image_tag 'https://via.placeholder.com/100x100', class: 'w-100 h-100 img-thumbnail', alt: 'User Avatar' %>
                        </div>
                    </div>
                    <!-- Card Content (Right) -->
                    <div class="col-md-8">
                        <div class="card-body">
                            <!-- Name (Bold) -->
                            <h5 class="card-title font-weight-bold"><%= current_user.name %></h5>
                            <!-- Username -->
                            <p class="card-text"></p>
                            <!-- Text -->
                            <p class="card-text">Total Tweets: <%= current_user.twets.all.count %></p>
                        </div>
                    </div>
                <% else %>
                    <h3 class='px-3 text-center py-5'> 
                        Please Sign in to Share Content.
                    
                        <%= link_to 'Sign-In', user_session_path, class:'btn btn-outline-primary mt-3' %>      
                    </h3>
                <% end %>
                
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <% if user_signed_in? %>
            <%= render 'form' %>
        <% end %>
        <% @twets.each do |twet| %>
        <div class="card mb-3">
        <div class="row no-gutters">
            <!-- Circular Image (Left) -->
            <div class="col-md-3">
            <div class="rounded-circle overflow-hidden" style="width: 100px; height: 100px;">
                <!-- Placeholder Image URL -->
                <%= image_tag 'https://via.placeholder.com/100x100', class: 'w-100 h-100 img-thumbnail', alt: 'User Avatar' %>
            </div>
            </div>
            <!-- Card Content (Right) -->
            <div class="col-md-9">
                    <div class="card-body">
                        <!-- Name (Bold) -->
                        <h5 class="card-title font-weight-bold"><%= twet.user.name %></h5>
                        <!-- Username -->
                        <p class="card-text">@<%= twet.user.name %></p>
                        <!-- Text -->
                        <p class="card-text"><%= twet.twet %></p>
                    </div>
                
            </div>
        </div>
        </div>
    <% end %>
    </div>
    <div class="col-sm-3">
        <h5 class='text-center'>Other Users</h5>
         <hr />
         <div class="card mb-3">
            <div class="row no-gutters">
                <!-- Circular Image (Left) -->
                <div class="col-md-4">
                    <div
                        class="rounded-circle overflow-hidden"
                        style="width: 80px; height: 80px;">
                        <%= image_tag 'https://via.placeholder.com/100x100', class: 'w-100 h-100 img-thumbnail', alt: 'User Avatar' %>
                    </div>
                </div>
                <!-- Card Content (Right) -->
                <div class="col-md-8">
                    <div class="card-body">
                        <!-- Name (Bold) -->
                        <h5 class="card-title font-weight-bold">John Doe</h5>
                        <!-- Username -->
                        <p class="card-text">@johndoe</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>