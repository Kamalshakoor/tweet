<div class="row g-2">
    <div class="col-sm-3">
        <div class="card mb-3">
            <div class="row no-gutters">
                <!-- Circular Image (Left) -->
                <div class="col-md-4">
                    <div
                        class="rounded-circle overflow-hidden"
                        style="width: 100px; height: 100px;">
                        <%= image_tag 'https://via.placeholder.com/100x100', class: 'w-100 h-100 img-thumbnail', alt: 'User Avatar' %>
                    </div>
                </div>
                <!-- Card Content (Right) -->
                <div class="col-md-8">
                    <div class="card-body">
                        <!-- Name (Bold) -->
                        <h5 class="card-title font-weight-bold">John Doe</h5>
                        <!-- Username -->
                        <p class="card-text">@johndoe</p>
                        <!-- Text -->
                        <p class="card-text">Total Tweets: <%= @twets.all.count %></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <%= render 'form' %>
        <% @twets.each do |twet| %>
        <div class="card mb-3">
        <div class="row no-gutters">
            <!-- Circular Image (Left) -->
            <div class="col-md-3">
            <div class="rounded-circle overflow-hidden" style="width: 100px; height: 100px;">
                <!-- Placeholder Image URL -->
                <%= image_tag 'https://via.placeholder.com/100x100', class: 'w-100 h-100 img-thumbnail', alt: 'User Avatar' %>
            </div>
            </div>
            <!-- Card Content (Right) -->
            <div class="col-md-9">
                    <div class="card-body">
                        <!-- Name (Bold) -->
                        <h5 class="card-title font-weight-bold">John Doe</h5>
                        <!-- Username -->
                        <p class="card-text">@johndoe</p>
                        <!-- Text -->
                        <p class="card-text"><%= twet.twet %></p>
                    </div>
                
            </div>
        </div>
        </div>
    <% end %>
    </div>
    <div class="col-sm-3">
        <h5 class='text-center'>Other Users</h5>
         <hr />
         <div class="card mb-3">
            <div class="row no-gutters">
                <!-- Circular Image (Left) -->
                <div class="col-md-4">
                    <div
                        class="rounded-circle overflow-hidden"
                        style="width: 80px; height: 80px;">
                        <%= image_tag 'https://via.placeholder.com/100x100', class: 'w-100 h-100 img-thumbnail', alt: 'User Avatar' %>
                    </div>
                </div>
                <!-- Card Content (Right) -->
                <div class="col-md-8">
                    <div class="card-body">
                        <!-- Name (Bold) -->
                        <h5 class="card-title font-weight-bold">John Doe</h5>
                        <!-- Username -->
                        <p class="card-text">@johndoe</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>